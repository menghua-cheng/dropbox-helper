{
  "_comment": "Example configuration for SCP over SSH to remote NAS",
  "DropboxCameraUploadsPath": "C:\\Users\\YourName\\Dropbox\\Camera Uploads",
  "BackupDestinationPath": "Not used for SSH transport",
  "FileStabilityWaitSeconds": 30,
  "CheckIntervalSeconds": 5,
  "SupportedExtensions": [
    ".jpg",
    ".jpeg",
    ".png",
    ".heic",
    ".heif",
    ".mp4",
    ".mov",
    ".avi",
    ".3gp",
    ".m4v"
  ],
  "EnableLogging": true,
  "LogPath": "%APPDATA%\\DropboxHelper\\logs",
  "MoveOrCopy": "Move",
  "PreserveDirectoryStructure": true,
  "MaxLogAgeDays": 30,
  "RetryAttempts": 3,
  "RetryDelaySeconds": 5,
  
  "_ssh_comment": "SSH/SCP Configuration for remote backup",
  "TransportMethod": "SSH",
  "SSHHost": "192.168.1.120",
  "SSHUser": "user1",
  "SSHPort": 22,
  "SSHKeyPath": "%USERPROFILE%\\.ssh\\id_rsa",
  "SSHRemotePath": "/volume1/photos/iphone-backup/"
}
